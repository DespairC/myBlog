<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwh.api.mapper.ArticleMapper">


    <select id="getArticle" resultType="com.hwh.common.domain.dto.Article">
        select * from article limit #{page}, #{pageSize}
    </select>

    <select id="getArticleById" resultType="com.hwh.common.domain.dto.Article">
        select *
        from article
        where id = #{id}
    </select>

</mapper>
